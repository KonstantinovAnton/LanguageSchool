<Window x:Class="LanguagesSchool.WindowAdminModeActivate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LanguagesSchool"
        mc:Ignorable="d"
        Title="Школа языков Леарн" Height="300" Width="500"
        FontFamily="Comic Sans MS"
        FontSize="15"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock>Введите код администратора</TextBlock>
            <TextBox Margin="0,10" Name="textBoxAdminCode" Width="120"></TextBox>
            <Button Name="btnActivateMode" Height="25" Click="btnActivateMode_Click" Template="{StaticResource ButtonTemplate}" Foreground="White" Width="180">Активировать режим</Button>
            <Button Margin="0,10" Name="btnExit" Height="25" Click="btnExit_Click" Template="{StaticResource ButtonTemplate}" Foreground="White" Width="180">Выйти</Button>
        </StackPanel>
    </Grid>
</Window>
