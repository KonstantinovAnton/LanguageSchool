<Window x:Class="LanguagesSchool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LanguagesSchool"
        mc:Ignorable="d"
        Title="Школа языков Леарн" Height="700" Width="1000"
        
        FontFamily="Comic Sans MS"
        FontSize="15"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left">
            <Image Margin="10,0" Source="/Images/school_logo.png" Height="25" Width="25"></Image>
            <Button Name="btnAdminMode" Template="{StaticResource ButtonTemplate}" Foreground="White" Margin="5,0" Width="180" Height="25" Background="#FF8D6060" Click="btnAdminMode_Click">Режим администратора</Button>
            

        </StackPanel>


        <Frame Name="frm" Grid.Row="1" NavigationUIVisibility="Hidden" Background="#D3D3D3">
        </Frame>

    </Grid>
</Window>
